extends ../layouts/common

block content

    h1.text-primary Create user new


    // Validate
    if errors
        each error in errors
            .alert.alert-danger= error


    form(action="/users/create", method = "POST")
        .form-group
            lable(for="name") Name: 
            input.form-control(type="text", name="name", id="name", value= values?values.name: "", placeholder="Nhập tên")
        .form-group
            lable(for="email") Email: 
            input.form-control(type="text", name="email", id="email", value= values?values.email:"", placeholder="Nhập email")
        .form-group
            lable(for="password") Phone: 
            input.form-control(type="text", name="phone", id="phone", value= values?values.phone:"", placeholder="Nhập số điện thoại")
        .form-group
            lable(for="password") Password: 
            input.form-control(type="text", name="password", id="password", value= values?values.password:"", placeholder="Nhập mật khẩu")
        
        button.mt-4.btn.btn-primary Create
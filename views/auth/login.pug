extends ../layouts/common
block content

    h1 Login Form
    
    // Validate
    if errors
        each error in errors
            .alert.alert-danger= error

    form(method="POST")
        .form-group
            label Email:
            input.form-control(name="email", type='text', placeholder ="Nhập email", value= value?value.email:"")
        .form-group
            label Mật khẩu:
            input.form-control(name="password", type='text', placeholder ="Nhập mật khẩu", value= value?value.password:"")
        .form-group
            button.btn-outline-primary.form-control Đăng Nhập
        